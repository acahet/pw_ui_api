#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running format check with Biome..."
npx biome format tests || {
  echo "❌ Format check failed! Please run 'yarn code:format' to fix formatting issues."
  exit 1
}

echo "Running lint check with ESLint..."
yarn lint || {
  echo "❌ Lint check failed! Please fix linting issues before committing."
  exit 1
}

echo "✅ All pre-commit checks passed!"
