{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": false,
    "strictNullChecks": true,
    "paths": {
      "@features/*": [
        "tests/ui-tests/feature/*"
      ],
      "@fixtures": [
        "tests/fixtures.ts"
      ],
      "@pages/*": [
        "tests/ui-tests/pages/*"
      ],
      "@config": [
        "tests/config/index.ts"
      ],
      "@utils/*": [
        "tests/utils/*"
      ],
      "@helpers/*": [
        "tests/helpers/*"
      ],
      "@schemas/*": [
        "tests/response-schemas/*"
      ]
    },
    "types": [
      "@playwright/test",
      "node"
    ],
    "moduleResolution": "node",
  }
}