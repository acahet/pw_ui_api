# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Specific file types - always use LF
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf

# Windows-specific files - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
