{
	"name": "playwright-template",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/acahet/playwright-template.git",
	"author": "Anderson Cahet",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@faker-js/faker": "^10.1.0",
		"@playwright/test": "^1.57.0",
		"@types/node": "^25.0.2",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"ajv": "^8.17.1",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.2",
		"eslint-plugin-playwright": "^2.4.0",
		"genson-js": "^0.0.8",
		"husky": "^9.1.7",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0"
	},
	"scripts": {
		"lint": "npx eslint",
		"code:format": "biome check --write tests",
		"code:format:check": "biome check tests",
		"test:all": "npx playwright test --workers=1",
		"test:ui": "npx playwright test --project ui-tests",
		"test:api": "npx playwright test --project api-tests",
		"test:ui-mode": "npx playwright test --ui",
		"report": "yarn playwright show-report tests/report/playwright-report",
		"prepare": "husky"
	}
}
